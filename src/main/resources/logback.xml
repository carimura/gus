<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Enable DEBUG level for LangChain4j to see requests/responses -->
    <logger name="dev.langchain4j" level="DEBUG"/>
    
    <!-- Enable INFO level for OpenAI specific logging -->
    <logger name="dev.langchain4j.model.openai" level="DEBUG"/>
    
    <!-- Enable INFO level for Ollama specific logging -->
    <logger name="dev.langchain4j.model.ollama" level="DEBUG"/>

    <root level="INFO">
        <appender-ref ref="STDOUT" />
    </root>
</configuration>